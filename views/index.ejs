          <option class="company" value="bmw">BMW</option>
          <option class="company" value="mercedes-benz">Mercedes-Benz</option>
        </select>
      </div>
      <div class="btn-group col-2 m-1">
        <button
          type="button"
          class="btn btn-primary dropdown-toggle"
          data-bs-toggle="dropdown"
          aria-expanded="false">
          Colors
        </button>
        <ul class="dropdown-menu">
          <li>
            <button class="dropdown-item colors" type="button" value="all">
              All colors
            </button>
          </li>
          <li>
            <button class="dropdown-item colors red" type="button" value="red">

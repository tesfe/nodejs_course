    <main class="bg-white row w-100 m-1">
      <section
        class="d-none d-sm-block col-12 col-sm-3 col-md-3 col-lg-2 ms-3 pb-5 menu">
        <form>
          <input
            type="text"
            id="search"
            placeholder="search"
            class="bg-light-subtle border-0 col-10 col-lg-8 text-center mt-2"
            required />
          <button
            for="search"
            class="search-btn rounded-2 bg-primary-subtle border-0">
            search
          </button>
        </form>
        <label class="fw-bold col-12">category</label>
        <div>
          <button class="col-12 text-start border-0 mt-1 category" value="all">
            all
          </button>
          <button class="category col-12 text-start border-0 mt-1" value="car">
            Car
          </button>
          <button
            class="col-12 text-start border-0 mt-1 category"
            value="pickup">
            Pickup
          </button>
          <button class="col-12 text-start border-0 mt-1 category" value="race">
            Racing Car
          </button>
          <button class="col-12 text-start border-0 mt-1 category" value="suv">
            Suv
          </button>
        </div>
        <label for="option" class="fw-bold"> company</label>
        <select
          class="form-select w-50 company"
          id="option"
          aria-label="Default select example">
          <option selected class="company" value="all">all</option>
          <option class="company" value="ford">Ford</option>
          <option class="company" value="dodge">Dodge</option>
          <option class="company" value="bmw">BMW</option>
          <option class="company" value="mercedes-benz">Mercedes-Benz</option>
        </select>
        <label class="fw-bold col-12">colors</label>
        <button value="all" class="border-0 p-2 border-0 colors">All</button>
        <button
          value="red"
          class="rounded-circle p-2 border-0 colors red"></button>
        <button
          value="white"
          class="rounded-circle p-2 border-0 white colors"></button>
        <button
          value="blue"
          class="rounded-circle p-2 border-0 blue colors"></button>
        <button
          value="yellow"
          class="rounded-circle p-2 border-0 yellow colors"></button>
        <button
          value="black"
          class="rounded-circle p-2 border-0 black colors"></button>
        <label for="prices" class="fw-bold col-12">prices</label>
        <label for="prices" class="col-12 rangeValue"> </label>
        <input type="range" id="prices" min="100" max="100000" value="100000" />
      </section>
      <div class="row justify-content-end pt-5 mt-5 w-100">
        <section
          class="col-12 col-sm-8 me-0 pe-0 col-md-8 col-lg-9 min-vh-100 pt-5 mt-5">
          <div class="row item">
